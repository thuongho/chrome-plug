{
  "manifest_version": 2,

  "name": "Site Sorter",
  "description": "Adds functionality to websites.",
  "version": "1.0",

  "page_action": {
    "default_icon":"icon.png",
    "default_title":"Site Sorter",
    "default_popup":"popup.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "tabs"
  ]
}