{
  "manifest_version": 2,

  "name": "Site Sorter",
  "description": "Adds functionality to websites.",
  "version": "1.0",

  "page_action": {
    "default_icon":"icon.png",
    "default_title":"Site Sorter",
    "default_popup":"popup.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://pluralsight.com/training/Courses/*", "http://pluralsight.com/training/Authors/Details/*"],
      "js": ["ps_cs.js","jquery-2.2.1.min.js"]
    }
  ],

  "permissions": [
    "tabs",
    "http://pluralsight.com/*"
  ]
}